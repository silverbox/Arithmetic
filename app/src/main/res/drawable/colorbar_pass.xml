<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#ff00f0f0"
                        android:centerColor="#ff0f4f4f"
                        android:centerY="0.5"
                        android:endColor="#ff00f0f0"
                        android:angle="90"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#ffff0f0f"
                        android:centerColor="#fff08080"
                        android:centerY="0.5"
                        android:endColor="#ffff0f0f"
                        android:angle="90"
                />
        </shape>
    </item>
</selector>
