<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#ff8f5f8f"
                        android:centerColor="#ff4f0f4f"
                        android:centerY="0.5"
                        android:endColor="#ff8f5f8f"
                        android:angle="90"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#ff409040"
                        android:centerColor="#ff80f080"
                        android:centerY="0.5"
                        android:endColor="#ff409040"
                        android:angle="90"
                />
        </shape>
    </item>
</selector>
