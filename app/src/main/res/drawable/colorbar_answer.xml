<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#fffdfd4f"
                        android:centerColor="#ff4f4f00"
                        android:centerY="0.5"
                        android:endColor="#fffdfd4f"
                        android:angle="90"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dip" />
                <gradient
                        android:startColor="#ff0f0f80"
                        android:centerColor="#ff8080ff"
                        android:centerY="0.5"
                        android:endColor="#ff0f0f80"
                        android:angle="90"
                />
        </shape>
    </item>
</selector>
